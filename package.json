{
  "name": "nekostore",
  "version": "0.2.0",
  "description": "Realtime synced datastore like Firestore with type",
  "main": "lib/Nekostore.js",
  "scripts": {
    "build": "tsc -b",
    "dev": "run-p -l dev:*",
    "dev:test": "npm run -s test -- --watch",
    "dev:lint": "esw --fix --ext .ts **/*.ts",
    "lint": "eslint **/*.ts",
    "test": "mocha -t 30000 --watch-extensions ts -r source-map-support/register -r ts-node/register -r ./tests/setup.ts **/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esnya/nekostore.git"
  },
  "keywords": [
    "database",
    "realtime",
    "sync",
    "firebase",
    "firestore"
  ],
  "author": "esnya",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/esnya/nekostore/issues"
  },
  "homepage": "https://github.com/esnya/nekostore#readme",
  "devDependencies": {
    "@types/chai": "^4.2.2",
    "@types/chai-as-promised": "^7.1.2",
    "@types/lodash": "^4.14.138",
    "@types/mocha": "^5.2.7",
    "@types/node-fetch": "^2.5.0",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.3.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-watch": "^6.0.0",
    "firebase-tools": "^7.3.2",
    "lodash": "^4.17.15",
    "mocha": "^6.2.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "sinon": "^7.4.2",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "firebase": "^6.6.1"
  }
